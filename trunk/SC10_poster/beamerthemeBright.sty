\definecolor{nwchemgreen}{RGB}{0,113,104} % Taken from nwchem_logo_dark.gif
\definecolor{nwchemgold}{RGB}{0,177,177} % Taken from b_nwchem.gif

\definecolor{jred}{RGB}{200,0,0}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\selectcolormodel{cmyk}
\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{headline}{fg=black,bg=white}
\setbeamercolor{title in headline}{fg=jred}
\setbeamercolor{author in headline}{fg=jred}
\setbeamercolor{institute in headline}{fg=jred}

\setbeamercolor*{normal text}{fg=green, bg=blue}
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=white,bg=cyan}
\setbeamerfont{block title}{size=\large,series=\bf}

\setbeamercolor{structure}{fg=blue}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,shadow=true,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=true,colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.15\paperwidth}
        \centering
        \begin{center}
          \includegraphics[width=.75\linewidth]{images/ANL_H_White.jpg}
        \end{center}
      \end{column}
      \begin{column}{.70\paperwidth}
        \vskip6ex
        \centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\Huge{\inserttitle}}\\[1ex]}
        \vskip4ex
        \usebeamercolor{author in headline}{\color{fg}\LARGE{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\LARGE{\insertinstitute}\\[1ex]}
        \vskip4ex
      \end{column}
      \begin{column}{.15\paperwidth}
        \centering
        \begin{center}
          \includegraphics[width=.75\linewidth]{images/ANL_H_White.jpg}
        \end{center}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

